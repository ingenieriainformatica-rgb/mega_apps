<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_account_journal_form_inherit_alert_dian" model="ir.ui.view">
    <field name="name">account.journal.form.inherit.alert.dian</field>
    <field name="model">account.journal</field>
    <field name="inherit_id" ref="account.view_account_journal_form"/>
    <field name="arch" type="xml">

      <!-- Insertar inmediatamente DESPUÃ‰S del many2many 'edi_format_ids' -->
      <xpath expr="//field[@name='edi_format_ids']" position="after">
        <field
          name="alert_dian"
          widget="boolean_toggle"
          groups="mega_validate_resolution_dian.group_validate_dian_user"/>

         <button
          name="cron_check_dian_expiration"
          string="Probar Alerta DIAN"
          type="object"
          class="btn-primary"
          invisible="1"
          icon="fa-bolt"/>

      </xpath>

    </field>
  </record>

  <record id="view_move_form_inherit_dian_alert" model="ir.ui.view">
    <field name="name">account.move.form.inherit.dian.alert</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- Insertamos la alerta justo antes del contenido principal -->
      <xpath expr="//sheet" position="before">
          <div invisible="not dian_alert_html">
            <field name="dian_alert_html" widget="html" readonly="1"/>
          </div>
      </xpath>
    </field>
  </record>

</odoo>
