<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Lista de movimientos de Caja Menor (editable arriba) -->
  <record id="view_petty_cash_box_line_tree" model="ir.ui.view">
    <field name="name">petty.cash.box.line.tree</field>
    <field name="model">petty.cash.box.line</field>
    <field name="arch" type="xml">
      <list string="Movimientos" editable="bottom">
        <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
        <field name="move_type"/>
        <field name="amount"/>
        <field name="description"/>
      </list>
    </field>
  </record>

</odoo>
