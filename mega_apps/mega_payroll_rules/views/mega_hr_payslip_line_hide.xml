<odoo>
  <data>

    <record id="mega_hr_payslip_line_tree_hide_cols" model="ir.ui.view">
      <field name="name">hr.payslip.line.tree.mega.hide.cols</field>
      <field name="model">hr.payslip</field>
      <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
      <field name="arch" type="xml">

        <!-- Columna Cantidad -->
        <xpath expr="//field[@name='line_ids']//field[@name='quantity']" position="attributes">
            <attribute name="optional">hide</attribute>
        </xpath>

        <!-- Columna Tasa (%) -->
        <xpath expr="//field[@name='line_ids']//field[@name='rate']" position="attributes">
            <attribute name="optional">hide</attribute>
        </xpath>

        <!-- Columna Regla -->
        <xpath expr="//field[@name='line_ids']//field[@name='salary_rule_id']" position="attributes">
            <attribute name="optional">hide</attribute>
        </xpath>

        <!-- Columna Importe -->
        <xpath expr="//field[@name='line_ids']//field[@name='amount']" position="attributes">
            <attribute name="optional">hide</attribute>
        </xpath>

      </field>
    </record>

  </data>
</odoo>
