<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <!-- Heredar la plantilla de impresión de la Orden de Venta -->
  <template id="realnet_sale_hide_taxes"
            inherit_id="sale.report_saleorder_document"
            priority="250">

    <!-- Inyectamos CSS basado en name (no índices) -->
    <xpath expr="//t[@t-call='web.external_layout']" position="inside">
      <style>
        /* Oculta la columna "Taxes" usando sus atributos name */
        [name='th_taxes'],
        [name='td_taxes'] {
          display: none !important;
        }
        #total {
          margin-top: 2px !important;
        }
      </style>
    </xpath>
  </template>
</odoo>
