<odoo>
  <!-- Override journal entry form title to show CE/CI number when coming from a payment -->
  <record id="view_account_move_form_inherit_consecutivos_realnet" model="ir.ui.view">
    <field name="name">account.move.form.consecutivos.realnet.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="priority">50</field>
    <field name="arch" type="xml">
      <!-- Replace the native name field with CE/CI + name fields and control visibility only for journal entries -->
      <xpath expr="//div[@class='oe_title']/h1/field[@name='name']" position="replace">
        <field name="x_ceci_number" readonly="1" nolabel="1" invisible="move_type != 'entry' or not x_ceci_number"/>
        <field name="name" invisible="move_type == 'entry' and x_ceci_number"/>
      </xpath>
    </field>
  </record>
</odoo>
