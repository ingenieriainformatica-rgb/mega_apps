<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_realnet_anticipos" model="ir.ui.view">
        <field name="name">res.config.settings.realnet.anticipos.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        <xpath expr="//app[@name='account']" position="inside">
            <block title="Customer &amp; Supplier Advances" name="realnet_advances_block">
            <setting string="Cuenta de Anticipos de Clientes"
                    help="Cuenta de pasivo para pagos de clientes sin factura (anticipos).">
                <div class="content-group">
                <div class="row mt16">
                    <div class="col-lg-3"><label for="anticipos_customer_account_id" class="o_light_label"/></div>
                    <div class="col-lg-9"><field name="anticipos_customer_account_id" options="{'no_create': False}"/></div>
                </div>
                </div>
            </setting>

            <setting string="Cuenta de Anticipos a Proveedores"
                    help="Cuenta de activo para pagos a proveedores sin factura (anticipos).">
                <div class="content-group">
                <div class="row mt16">
                    <div class="col-lg-3"><label for="anticipos_supplier_account_id" class="o_light_label"/></div>
                    <div class="col-lg-9"><field name="anticipos_supplier_account_id" options="{'no_create': False}"/></div>
                </div>
                </div>
            </setting>
            </block>
        </xpath>
        </field>
    </record>
</odoo>