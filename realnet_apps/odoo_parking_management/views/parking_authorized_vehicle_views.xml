<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="parking_authorized_vehicle_view_list" model="ir.ui.view">
            <field name="name">parking.authorized.vehicle.list</field>
            <field name="model">parking.authorized.vehicle</field>
            <field name="arch" type="xml">
                <list string="Placas Autorizadas">
                    <field name="vehicle_number"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="parking_authorized_vehicle_view_form" model="ir.ui.view">
            <field name="name">parking.authorized.vehicle.form</field>
            <field name="model">parking.authorized.vehicle</field>
            <field name="arch" type="xml">
                <form string="Placa Autorizada">
                    <group>
                        <field name="contract_id" invisible="1" readonly="1"/>
                        <field name="vehicle_number"/>
                        <field name="active"/>
                    </group>
                </form>
            </field>
        </record>
    </data>
</odoo>
