<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vistas del Tablero de Clientes Ordinarios -->
        <record id="parking_regular_dashboard_view_form" model="ir.ui.view">
            <field name="name">parking.regular.dashboard.form</field>
            <field name="model">parking.regular.dashboard</field>
            <field name="arch" type="xml">
                <form string="Tablero Clientes Ordinarios">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_entries_period"
                                    icon="fa-list" string="Ver Entradas" title="Ver entradas del periodo"/>
                            <button class="oe_stat_button" type="object" name="action_view_invoices_period"
                                    icon="fa-file-text-o" string="Ver Facturas" title="Ver facturas del periodo"/>
                        </div>

                        <group>
                            <group>
                                <field name="all_sites" string="Todas las sedes"/>
                                <field name="site_ids" string="Sedes" widget="many2many_tags" invisible="all_sites"/>
                                <field name="site_id" invisible="1"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </group>

                        <!-- Métricas principales -->
                        <div class="row mt-3">
                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-success text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fa fa-sign-in fa-2x" title="Entradas Totales"/>
                                            </div>
                                            <div>
                                                <h3 class="card-title mb-0">
                                                    <field name="total_entries_count" readonly="1"/>
                                                </h3>
                                                <p class="card-text">Entradas Totales</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-warning text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fa fa-car fa-2x" title="En Parqueo"/>
                                            </div>
                                            <div>
                                                <h3 class="card-title mb-0">
                                                    <field name="active_now_count" readonly="1"/>
                                                </h3>
                                                <p class="card-text">En Parqueo</p>
                                                <button type="object" name="action_view_active_now"
                                                        class="btn btn-sm btn-outline-light">Ver</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-primary text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fa fa-dollar fa-2x" title="Facturado"/>
                                            </div>
                                            <div>
                                                <h3 class="card-title mb-0">
                                                    <field name="invoiced_amount" widget="monetary" readonly="1"/>
                                                </h3>
                                                <p class="card-text">Facturado</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-3 col-md-6">
                                <div class="card bg-info text-white">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="me-3">
                                                <i class="fa fa-check fa-2x" title="Pagado"/>
                                            </div>
                                            <div>
                                                <h3 class="card-title mb-0">
                                                    <field name="paid_amount" widget="monetary" readonly="1"/>
                                                </h3>
                                                <p class="card-text">Pagado</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Estado de pagos y desglose por tipo -->
                        <div class="row mt-3">
                            <div class="col-lg-4 col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Estado de Pagos</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span>Pendientes:</span>
                                            <span class="badge bg-warning">
                                                <field name="pending_payment_count" readonly="1"/>
                                            </span>
                                        </div>
                                        <button type="object" name="action_view_pending_payments"
                                                class="btn btn-sm btn-warning">Ver Pendientes</button>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4 col-md-6">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Por Tipo de Vehículo</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span>Motos:</span>
                                            <span class="badge bg-secondary">
                                                <field name="moto_entries_count" readonly="1"/>
                                            </span>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span>Automóviles:</span>
                                            <span class="badge bg-secondary">
                                                <field name="auto_entries_count" readonly="1"/>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción del Tablero -->
        <record id="parking_regular_dashboard_action" model="ir.actions.act_window">
            <field name="name">Tablero Clientes Ordinarios</field>
            <field name="res_model">parking.regular.dashboard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="parking_regular_dashboard_view_form"/>
            <field name="target">current</field>
            <field name="context">{'form_view_initial_mode': 'edit'}</field>
        </record>
    </data>
</odoo>
