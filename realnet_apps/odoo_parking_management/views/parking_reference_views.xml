<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form view -->
        <record id="parking_reference_view_form" model="ir.ui.view">
            <field name="name">parking.reference.form</field>
            <field name="model">parking.reference</field>
            <field name="arch" type="xml">
                <form string="Referencia de Precios">
                    <sheet>
                        <h1>
                            <field name="name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name="is_default"/>
                                <field name="company_id"/>
                                <field name="site_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="currency_id" readonly="1" string="Moneda"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Auto">
                                <group>
                                    <field name="auto_first_minutes"/>
                                    <field name="auto_first_source"/>
                                    <field name="auto_first_price_incl" invisible="auto_first_source != 'fixed_incl'"/>
                                </group>
                                <group>
                                    <field name="auto_hourly_source"/>
                                    <field name="auto_hourly_price_incl" invisible="auto_hourly_source != 'fixed_incl'"/>
                                </group>
                            </page>
                            <page string="Moto">
                                <group>
                                    <field name="moto_free_minutes"/>
                                    <field name="moto_hourly_source"/>
                                    <field name="moto_hourly_price_incl" invisible="moto_hourly_source != 'fixed_incl'"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Tree view -->
        <record id="parking_reference_view_tree" model="ir.ui.view">
            <field name="name">parking.reference.tree</field>
            <field name="model">parking.reference</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="active"/>
                    <field name="is_default"/>
                    <field name="company_id"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="parking_reference_action" model="ir.actions.act_window">
            <field name="name">Referencias</field>
            <field name="res_model">parking.reference</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu under Configuration -->
        <menuitem id="parking_reference_menu"
                  name="Referencias"
                  parent="odoo_parking_management.parking_entry_menu_configuration_root"
                  action="parking_reference_action"
                  groups="odoo_parking_management.group_parking_admin"
                  sequence="10"/>
    </data>
</odoo>
