<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="parking_suspicious_vehicle_view_tree" model="ir.ui.view">
            <field name="name">parking.suspicious.vehicle.tree</field>
            <field name="model">parking.suspicious.vehicle</field>
            <field name="arch" type="xml">
                <list>
                    <field name="vehicle_number"/>
                    <field name="reason"/>
                    <field name="print_ticket"/>
                    <field name="apply_to_all_sites"/>
                    <field name="site_ids" widget="many2many_tags"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <!-- Form view -->
        <record id="parking_suspicious_vehicle_view_form" model="ir.ui.view">
            <field name="name">parking.suspicious.vehicle.form</field>
            <field name="model">parking.suspicious.vehicle</field>
            <field name="arch" type="xml">
                <form string="Vehículo Sospechoso">
                    <sheet>
                        <group>
                            <group>
                                <field name="vehicle_number"/>
                                <field name="print_ticket"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="apply_to_all_sites"/>
                                <field name="site_ids" invisible="apply_to_all_sites"/>
                                <field name="company_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="reason" nolabel="1" placeholder="Describa el motivo de la alerta..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search view -->
        <record id="parking_suspicious_vehicle_view_search" model="ir.ui.view">
            <field name="name">parking.suspicious.vehicle.search</field>
            <field name="model">parking.suspicious.vehicle</field>
            <field name="arch" type="xml">
                <search string="Buscar Alertas de Vehículos Sospechosos">
                    <field name="vehicle_number"/>
                    <field name="site_ids"/>
                    <filter string="Bloquear" name="filter_block" domain="[('print_ticket','=',False)]"/>
                    <filter string="Informativas" name="filter_info" domain="[('print_ticket','=',True)]"/>
                    <filter string="Activas" name="filter_active" domain="[('active','=',True)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="parking_suspicious_vehicle_action" model="ir.actions.act_window">
            <field name="name">Vehículos Sospechosos</field>
            <field name="res_model">parking.suspicious.vehicle</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="parking_suspicious_vehicle_view_tree"/>
            <field name="search_view_id" ref="parking_suspicious_vehicle_view_search"/>
            <field name="context">{}</field>
        </record>

        <!-- Menu (Configuración) -->
        <menuitem id="parking_suspicious_vehicle_menu"
                  name="Vehículos Sospechosos"
                  parent="odoo_parking_management.parking_entry_menu_configuration_root"
                  action="parking_suspicious_vehicle_action"
                  sequence="20"
                  groups="odoo_parking_management.odoo_parking_management_group_parking_manager"/>
    </data>
    
</odoo>
