<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_report_journal_entry" model="ir.actions.report">
        <field name="name">PDF Asiento Contable</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom_accounting_reports.report_journal_entry_template</field>
        <field name="report_file">custom_accounting_reports.report_journal_entry_template</field>
        <field name="print_report_name">'Asiento Contable - %s' % (object.name)</field>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_journal_entry_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="company" t-value="doc.company_id"/>
                <t t-call="web.internal_layout">
                    <div class="page">
                        <h2>Asiento Contable: <p t-field="doc.name"/></h2> 

                        <div class="row mt-4 mb-4">
                            <div class="col-6">
                                <strong>Diario:</strong>
                                <p t-field="doc.journal_id.name"/>
                                <strong>Contacto:</strong>
                                <p t-field="doc.partner_id.name"/>
                                <strong>NIT:</strong>
                                <p t-field="doc.partner_id.vat"/>
                            </div>
                            <div class="col-6">
                                <strong>Fecha:</strong>
                                <p t-field="doc.date"/>
                                <strong>Referencia:</strong>
                                <p t-field="doc.name"/>
                            </div>
                        </div>

                        <table class="table table-sm o_main_table" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th class="text-start">Cuenta</th>
                                    <th class="text-start">Contacto</th>
                                    <th class="text-start">Etiqueta</th>
                                    <th class="text-end">Débito</th>
                                    <th class="text-end">Crédito</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="line">
                                    <tr>
                                        <td><span t-field="line.account_id.display_name"/></td>
                                        <td>
                                            <t t-if="line.partner_id">
                                                <span t-field="line.partner_id.name"/>
                                            </t>
                                        </td>
                                        <td><span t-field="line.name"/></td>
                                        <td class="text-end">
                                            <span t-field="line.debit" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="line.credit" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Totales</strong></td>
                                    <td class="text-end">
                                        <strong><span t-esc="sum(doc.line_ids.mapped('debit'))" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/></strong>
                                    </td>
                                    <td class="text-end">
                                        <strong><span t-esc="sum(doc.line_ids.mapped('credit'))" t-options="{'widget': 'monetary', 'display_currency': doc.company_id.currency_id}"/></strong>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>