<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_pos_auto_lock_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">sh.pos.auto.lock.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="pos_interface_section" position="after">
                <block title="POS Auto Lock Configuration">
                    <setting string="Enable POS Auto Lock">
                        <field name="pos_sh_enable_auto_lock" />
                    </setting>
                    <setting string="Time Interval (In Second)" invisible="not pos_sh_enable_auto_lock">
                        <field name="pos_sh_lock_timer" />
                    </setting>
                </block>
            </block>
        </field>
    </record>
</odoo>
