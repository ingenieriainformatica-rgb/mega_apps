<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ReturnOrderPopup" t-inherit="sh_pos_return_exchange.ReturnOrderPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('modal-body')]" position="after">
            <div class="sh_radio_btn_div" t-if="props.from_barcode">
                <div class="sh_return_exchange_radio text-center my-2">
                    <t t-if="env.services.pos.config.sh_allow_return and env.services.pos.config.sh_allow_exchange">
                        <div>
                            <input type="radio" class="form-check-input o_radio_input" id="return_radio" value="Return" name="return_exchange_radio" t-on-click="this.onClickRadio"/>
                            <label class="sh_custom_radio sh_control_radio mx-1" for="return_radio">Return
                                <div class="sh_custom_radio_indicator"></div>
                            </label>
                        </div>
                        <div>
                            <input type="radio" class="form-check-input o_radio_input" id="exchange_radio" value="Exchange" name="return_exchange_radio" t-on-click="this.onClickRadio"/>
                            <label class="sh_custom_radio sh_control_radio mx-1" for="exchange_radio">Exchange
                                <div class="sh_custom_radio_indicator"></div>
                            </label>                        
                        </div>
                    </t>
                    <t t-if="env.services.pos.config.sh_allow_return and !env.services.pos.config.sh_allow_exchange">
                            <input type="radio" id="return_radio" value="Return" name="return_exchange_radio" checked="checked" t-on-click="this.onClickRadio"/>
                            <label class="sh_custom_radio sh_control_radio" for="return_radio">Return
                                <div class="sh_custom_radio_indicator"></div>
                            </label>
                    </t>
                    <t t-if="!env.services.pos.config.sh_allow_return and env.services.pos.config.sh_allow_exchange">
                            <input type="radio" id="exchange_radio" value="Exchange" name="return_exchange_radio" checked="checked" t-on-click="this.onClickRadio"/>
                            <label class="sh_custom_radio sh_control_radio" for="exchange_radio">Exchange
                                <div class="sh_custom_radio_indicator"></div>
                            </label>
                    </t>

                    <br />

                </div>

            </div>
        </xpath>

    </t>
</templates>
