<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_pos_line_pricelist.PriceListPopupWidget">
        <Dialog title="props.title" bodyClass="'d-flex flex-column'" size="'md'">
            <div class="popup">
                <main class="body modal-body sh_pricelist_main_table">
                    <table class="pricelist_table">
                        <tbody>
                            <t t-if="props.available_pricelist">
                                <t t-log="props.available_pricelist"/>
                                <t t-foreach="props.available_pricelist" t-as="each_pricelist" t-key="each_pricelist.id">
                                    <tr t-att-data-id="each_pricelist.id" class="pricelist_row" t-on-click="() => this.onClickPricelistRow(each_pricelist)">
                                        <td>
                                            <t t-esc="each_pricelist.name" />
                                        </td>
                                        <td class="price_td" t-att-data-price="each_pricelist.display_price"><t t-esc="env.utils.formatCurrency(each_pricelist.display_price)" /></td>
                                    </tr>
                                </t>
                            </t>
                            <t t-if="props.pricelist_for_code">
                                <t t-foreach="props.pricelist_for_code" t-as="each_pricelist" t-key="each_pricelist.id">
                                    <tr t-att-data-id="each_pricelist.id" class="pricelist_row only_read" style="background: #ddd;">
                                        <td>
                                            <t t-esc="each_pricelist.name" />
                                        </td>
                                        <td>
                                            <t t-esc="each_pricelist.display_price" />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                </main>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary btn-md lh-lg o-default-button"  t-on-click="close">Cancel</button>
            </t>
        </Dialog>
    </t>

</templates>
