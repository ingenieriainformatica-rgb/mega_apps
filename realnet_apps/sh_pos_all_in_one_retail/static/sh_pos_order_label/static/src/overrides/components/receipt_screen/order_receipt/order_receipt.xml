<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_pos_all_in_one_retail.OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">
        <xpath expr="//Orderline" position="attributes">
            <attribute name="t-if">!line.add_section</attribute>
        </xpath>
        <xpath expr="//Orderline" position="after">
            <t t-if='line.add_section'>
                <t t-if='line.label_in_receipt '>
                    <li class='line_label text-center'>
                        <i>
                            <t t-esc='line.add_section' />
                        </i>
                    </li>
                </t>
            </t>
        </xpath>
    </t>

</templates>
