<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sh_pos_theme_responsive.TicketScreen" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('control-buttons')]" position="attributes">
            <attribute name="class">control-buttons d-flex gap-2 pb-2 sh_hide_button</attribute>
        </xpath>
        <xpath expr="//div[hasclass('rightpane')]" position="before">
            <t t-if="pos.models['sh.pos.theme.settings'] and pos.models['sh.pos.theme.settings'].getAll()[0] and pos.models['sh.pos.theme.settings'].getAll()[0].sh_action_button_position and pos.models['sh.pos.theme.settings'].getAll()[0].sh_action_button_position == 'left_side' and isOrderSynced">
                <t t-set="_selectedSyncedOrder" t-value="getSelectedOrder()" />
                <t t-set="_selectedOrderlineId" t-value="getSelectedOrderlineId()" />
                <div class="control-buttons d-flex gap-2 pb-2">
                    <button class="edit-order-payment control-button btn btn-light btn-lg lh-lg flex-grow-1 flex-shrink-1" t-on-click="() => this.pos.orderDetails(_selectedSyncedOrder)">
                        <i class="fa fa-pencil-square-o me-1" /> Details
                    </button>
                    <InvoiceButton
                        onInvoiceOrder.bind="onInvoiceOrder"
                        order="_selectedSyncedOrder" />
                    <button class="control-button btn btn-light btn-lg lh-lg flex-grow-1 flex-shrink-1" t-on-click="() => doPrint.call(_selectedSyncedOrder)">
                        <i t-attf-class="fa {{doPrint.status === 'loading' ? 'fa-fw fa-spin fa-circle-o-notch' : 'fa-print'}} me-1" />Print Receipt
                    </button>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('leftpane')]" position="after">
            <t t-if="pos.models['sh.pos.theme.settings'] and pos.models['sh.pos.theme.settings'].getAll()[0] and pos.models['sh.pos.theme.settings'].getAll()[0].sh_action_button_position and pos.models['sh.pos.theme.settings'].getAll()[0].sh_action_button_position == 'right_side' and isOrderSynced">
                <t t-set="_selectedSyncedOrder" t-value="getSelectedOrder()" />
                <t t-set="_selectedOrderlineId" t-value="getSelectedOrderlineId()" />
                <div class="control-buttons d-flex gap-2 pb-2">
                    <button class="edit-order-payment control-button btn btn-light btn-lg lh-lg flex-grow-1 flex-shrink-1" t-on-click="() => this.pos.orderDetails(_selectedSyncedOrder)">
                        <i class="fa fa-pencil-square-o me-1" /> Details
                    </button>
                    <InvoiceButton
                        onInvoiceOrder.bind="onInvoiceOrder"
                        order="_selectedSyncedOrder" />
                    <button class="control-button btn btn-light btn-lg lh-lg flex-grow-1 flex-shrink-1" t-on-click="() => doPrint.call(_selectedSyncedOrder)">
                        <i t-attf-class="fa {{doPrint.status === 'loading' ? 'fa-fw fa-spin fa-circle-o-notch' : 'fa-print'}} me-1" />Print Receipt
                    </button>
                </div>
            </t>
        </xpath>
        <xpath expr="//div[hasclass('ticket-screen')]" position="after">
            <t t-if="pos.models['sh.pos.theme.settings'] and pos.models['sh.pos.theme.settings'].getAll()[0] and pos.models['sh.pos.theme.settings'].getAll()[0].sh_action_button_position and pos.models['sh.pos.theme.settings'].getAll()[0].sh_action_button_position == 'bottom'">
                <t t-set="_selectedSyncedOrder" t-value="getSelectedOrder()" />
                <t t-set="_selectedOrderlineId" t-value="getSelectedOrderlineId()" />
                <div class="control-buttons d-flex gap-2 pb-2">
                    <div id="owl-demo" class="owl-carousel owl-theme sh_action_button sh_hide_action_button">
                        <div class="item">
                            <button class="edit-order-payment control-button btn btn-light btn-lg lh-lg flex-grow-1 flex-shrink-1" t-on-click="() => this.pos.orderDetails(_selectedSyncedOrder)">
                                <i class="fa fa-pencil-square-o me-1" /> Details
                            </button>
                        </div>
                        <div class="item">
                            <InvoiceButton
                                onInvoiceOrder.bind="onInvoiceOrder"
                                order="_selectedSyncedOrder" />
                        </div>
                        <div class="item">
                            <button class="control-button btn btn-light btn-lg lh-lg flex-grow-1 flex-shrink-1" t-on-click="() => doPrint.call(_selectedSyncedOrder)">
                                <i t-attf-class="fa {{doPrint.status === 'loading' ? 'fa-fw fa-spin fa-circle-o-notch' : 'fa-print'}} me-1" />Print Receipt
                            </button>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
        
