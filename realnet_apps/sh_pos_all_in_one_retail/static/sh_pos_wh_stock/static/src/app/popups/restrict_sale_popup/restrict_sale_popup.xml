<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="sh_pos_all_in_one_retail.ProductStockRestrict">
        <Dialog title="props.title" bodyClass="'d-flex flex-column'" size="lg">
            <div class="popup">
                <main class="modal-body">
                    <div class="sh_box">
                        <img class="h-100" t-att-src="imageUrl" t-att-alt="props.product.display_name" />
                    </div>
                    <div class="sh_box">
                        <span>
                            <t t-esc="props.product.display_name" />
                        </span>
                    </div>
                    <div class="sh_box">
                        <span>
                            <t t-esc="props.body" />
                        </span>
                    </div>
                </main>

            </div>
            <t t-set-slot="footer">
                <button class="btn btn-primary btn-lg lh-lg o-default-button" t-on-click="confirm">Order</button>
                <button class="btn btn-secondary btn-lg lh-lg o-default-button" t-on-click="close">Cancel</button>
            </t>
        </Dialog>
    </t>
</templates>
