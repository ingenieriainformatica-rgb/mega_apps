<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="ProductCard" t-inherit="point_of_sale.ProductCard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('product-information-tag')]" position="after">
            <t t-if="this.pos.config.sh_display_stock and props.product.type == 'consu' and this.get_length_of_varients() ">
                <div class="sh_product_box_icon" >
                    <span class="product-image-icon" >
                        <i class="fa fa-building-o" t-on-click="() => this.pos.showStock(props.productId)" aria-hidden="true"></i>
                    </span>
                </div>
                <t t-if="this.pos.config.sh_show_qty_location">
                    <span class="sh_product_qty badge" t-att-id="props.productId">
                        <t t-esc="get_display_stock"></t>
                    </span>
                </t>
            </t>
        </xpath>
    </t>
</templates>
