<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="sh_pos_all_in_one_retail.TransactionPopupWidget">
        <Dialog title="props.title">
            <div class="sh_cash_in_out_option_modal_dialog">
                <t t-set="total_transaction" t-value="0.00" ></t>
                <div class="popup popup-textinput popup-text popup-lg sh_payment_popup">
                    <div class="modal-body touch-scrollable scrollable-y main_div_sh_payment">
                        <div class="main_div_sh_payment_table">
                            <t t-if="props.all_payment.length > 0">
                                <table class="sh_payment_table">
                                    <thead>
                                        <th style="width: 26%;">Order</th>
                                        <th style="width: 28%;">Payment Method</th>
                                        <th style="width: 26%;">Amount</th>
                                        <th style="width: 20%;">Date</th>
                                    </thead>
                                    <tbody>
                                            <tr t-foreach="props.all_payment" t-as="each_payment" t-key="each_payment.id">
                                                <t t-set="total_transaction" t-value="total_transaction + each_payment.amount" ></t>
                                                <td>
                                                    <t t-if="each_payment.pos_order_id">
                                                        <t t-esc="each_payment.pos_order_id.name " />
                                                    </t>
                                                    <t t-else="">
                                                        -
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-if="each_payment.payment_method_id">
                                                        <t t-esc="each_payment.payment_method_id.name" />
                                                    </t>
                                                    <t t-else="">
                                                        -
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-if="each_payment.amount">
                                                        <t t-esc="env.utils.formatCurrency(each_payment.amount)" />
                                                    </t>
                                                    <t t-else="">
                                                        <t t-esc="env.utils.formatCurrency(0.00)" />
                                                    </t>
                                                </td>
                                                <td>
                                                    <t t-if="each_payment.payment_date">
                                                        <t t-esc="each_payment.payment_date" />
                                                    </t>
                                                    <t t-else="">
                                                        -
                                                    </t>
                                                </td>
                                            </tr>
                                    </tbody>
                                </table>
                            </t>
                        </div>
                        <div class="main_div_sh_payment_footer p-3">
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="sh_starting_cash_div text-center mt-2">
                                        <label class="starting_cash_lbl sh_lbl fw-bolder">Starting Cash :</label>
                                        <span class="starting_cash_value sh_value">
                                            <t t-if="pos.session.cash_register_balance_start">
                                                <t t-esc="env.utils.formatCurrency(pos.session.cash_register_balance_start)" />
                                            </t>
                                            <t t-else="">
                                                <t t-esc="env.utils.formatCurrency(0.00)" />
                                            </t>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="sh_transaction_cash_div text-center mt-2">
                                        <label class="transaction_cash_lbl sh_lbl fw-bolder">Transactions :</label>
                                        <span class="transaction_cash_value sh_value">
                                            <t t-if="pos.session.cash_register_balance_end">
                                                <t t-esc="env.utils.formatCurrency((pos.session.cash_register_balance_end - pos.session.cash_register_balance_start) + (pos.session.cash_register_balance_start))" />
                                            </t>
                                            <t t-else="">
                                                <t t-esc="env.utils.formatCurrency(0.00)" />
                                            </t>
                                        </span>
                                    </div>
                                
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="sh_expected_cash_div text-center mt-2">
                                        <label class="expected_cash_lbl sh_lbl fw-bolder">Expected in Cash :</label>
                                        <span class="expected_cash_value sh_value">
                                            <t t-if="pos.session.cash_register_balance_end">
                                                <t t-esc="env.utils.formatCurrency(pos.session.cash_register_balance_end)" />
                                            </t>
                                            <t t-else="">
                                                <t t-esc="env.utils.formatCurrency(0.00)" />
                                            </t>
                                        </span>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <div class="sh_actual_cash_div text-center mt-2">
                                        <label class="actual_cash_lbl sh_lbl fw-bolder">Actual in Cash :</label>
                                        <span class="actual_cash_value sh_value">
                                            <t t-if="pos.session.cash_register_balance_end_real">
                                                <t t-esc="env.utils.formatCurrency(pos.session.cash_register_balance_end_real)" />
                                            </t>
                                            <t t-else="">
                                                <t t-esc="env.utils.formatCurrency(0.00)" />
                                            </t>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </Dialog>
    </t>

</templates>
