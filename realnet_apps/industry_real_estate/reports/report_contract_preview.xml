<odoo>
  <record id="action_report_contract_preview" model="ir.actions.report">
    <field name="name">Previsualización de Contrato</field>
    <field name="model">sale.order</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">industry_real_estate.report_contract_preview</field>
    <field name="report_file">industry_real_estate.report_contract_preview</field>
    <field name="print_report_name">
      "'contrato_%s_(%s).pdf' % (object.name.replace('/', '-'), (object.report_timestamp or time.strftime('%Y-%m-%d %H-%M-%S')))"
  </field>

    <!-- ✅ CLAVES PARA QUE APAREZCA EN "Imprimir" -->
    <field name="binding_model_id" ref="sale.model_sale_order"/>
    <field name="binding_type">report</field>
  </record>
</odoo>
