<!-- views/add_annex_wizard_views.xml -->
<odoo>
  <record id="view_add_annex_wizard_form" model="ir.ui.view">
    <field name="name">contract.annex.form</field>
    <field name="model">contract.annex</field>
    <field name="arch" type="xml">
      <form string="Agregar anexos">
        <group>
          <field name="annex_ids" widget="many2many_tags" options="{'no_create_edit': True}"/>
        </group>
        <footer>
          <button string="Agregar" type="object" name="action_confirm_anex" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
