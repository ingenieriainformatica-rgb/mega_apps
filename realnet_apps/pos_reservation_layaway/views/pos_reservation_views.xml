<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_reservation_tree" model="ir.ui.view">
        <field name="name">pos.reservation.tree</field>
        <field name="model">pos.reservation</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="amount_total"/>
                <field name="amount_paid"/>
                <field name="amount_due"/>
                <field name="date_reservation"/>
                <field name="expiration_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_pos_reservation_form" model="ir.ui.view">
        <field name="name">pos.reservation.form</field>
        <field name="model">pos.reservation</field>
        <field name="arch" type="xml">
            <form string="POS Reservation">
                <header>
                    <button name="action_complete" type="object" string="Completar (Facturar)" class="btn-primary" invisible="state != 'reserved' or amount_due &gt; 0"/>
                    <button name="action_cancel" type="object" string="Cancelar" class="btn-secondary" invisible="state in ('cancelled','paid')"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_picking" class="oe_stat_button" icon="fa-exchange" invisible="not picking_id">
                            <div class="o_stat_info">
                                <span class="o_stat_value"><field name="picking_id"/></span>
                                <span class="o_stat_text">Transferencia</span>
                            </div>
                        </button>
                        <button type="object" name="action_view_payments" class="oe_stat_button" icon="fa-credit-card" invisible="not payment_ids">
                            <div class="o_stat_info">
                                <span class="o_stat_value"><field name="amount_paid"/></span>
                                <span class="o_stat_text">Abonos</span>
                            </div>
                        </button>
                        <button type="object" name="action_view_invoice" class="oe_stat_button" icon="fa-file-text-o" invisible="not invoice_id">
                            <div class="o_stat_info">
                                <span class="o_stat_value"><field name="invoice_id"/></span>
                                <span class="o_stat_text">Factura</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="pos_config_id"/>
                            <field name="pos_session_id"/>
                            <field name="pricelist_id"/>
                        </group>
                        <group>
                            <field name="date_reservation"/>
                            <field name="expiration_date"/>
                            <field name="state"/>
                            <field name="allow_refund"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="LÃ­neas">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="qty"/>
                                    <field name="price_unit_fixed"/>
                                    <field name="discount"/>
                                    <field name="price_subtotal" readonly="1"/>
                                    <field name="amount_paid_line" readonly="1"/>
                                    <field name="amount_due_line" readonly="1"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                        <page string="Abonos">
                            <field name="payment_ids">
                                <list>
                                    <field name="date"/>
                                    <field name="ticket_number"/>
                                    <field name="amount"/>
                                    <field name="journal_id"/>
                                    <field name="state"/>
                                    <field name="line_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <field name="amount_total" readonly="1"/>
                        <field name="amount_paid" readonly="1"/>
                        <field name="amount_due" readonly="1"/>
                    </group>
                    <field name="note"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_pos_reservation" model="ir.actions.act_window">
        <field name="name">Apartados</field>
        <field name="res_model">pos.reservation</field>
        <field name="view_mode">list,form,kanban,pivot,graph</field>
        <field name="help" type="html">
            <p>Gestione las reservas (apartados) del POS.</p>
        </field>
    </record>

    <menuitem id="menu_pos_reservation_root" name="Apartados" parent="point_of_sale.menu_point_root" sequence="60" groups="pos_reservation_layaway.group_pos_reservation_user"/>
    <menuitem id="menu_pos_reservation" name="Reservas" parent="menu_pos_reservation_root" action="action_pos_reservation" sequence="1"/>

    <!-- Views for pos.reservation.payment -->
    <record id="view_pos_reservation_payment_tree" model="ir.ui.view">
        <field name="name">pos.reservation.payment.tree</field>
        <field name="model">pos.reservation.payment</field>
        <field name="arch" type="xml">
            <list>
                <field name="reservation_id" invisible="1"/>
                <field name="date"/>
                <field name="ticket_number"/>
                <field name="amount"/>
                <field name="journal_id"/>
                <field name="account_payment_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_pos_reservation_payment_form" model="ir.ui.view">
        <field name="name">pos.reservation.payment.form</field>
        <field name="model">pos.reservation.payment</field>
        <field name="arch" type="xml">
            <form string="Abono de Apartado">
                <sheet>
                    <group>
                        <group>
                            <field name="reservation_id" readonly="1"/>
                            <field name="date"/>
                            <field name="ticket_number"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="journal_id"/>
                            <field name="pos_payment_ref"/>
                            <field name="account_payment_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
