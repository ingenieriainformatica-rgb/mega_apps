<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_pos_layaway" model="ir.ui.view">
        <field name="name">res.config.settings.pos.layaway</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Insert our settings as a new block within the POS app section -->
            <xpath expr="//app[@name='point_of_sale']/div[@invisible='not pos_config_id']/block[@id='pos_accounting_section']" position="after">
                <block title="Apartar Productos (Layaway)" id="pos_layaway_section">
                    <setting id="layaway_min_percent" string="% mínimo abono inicial">
                        <field name="pos_layaway_min_percent"/>
                    </setting>
                    <setting id="layaway_expiration_days" string="Días de vencimiento">
                        <field name="pos_layaway_expiration_days"/>
                    </setting>
                    <setting id="layaway_hold_location_id" string="Ubicación para Hold">
                        <field name="pos_layaway_hold_location_id"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
