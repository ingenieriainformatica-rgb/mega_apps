<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_pos_reservation_user" model="res.groups">
            <field name="name">POS Reservation User</field>
            <field name="category_id" ref="base.module_category_point_of_sale"/>
        </record>
        <record id="group_pos_reservation_manager" model="res.groups">
            <field name="name">POS Reservation Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_pos_reservation_user'))]"/>
            <field name="category_id" ref="base.module_category_point_of_sale"/>
        </record>

        <!-- Make POS core groups imply our groups so cashiers/managers can use the feature without manual assignment -->
        <record id="point_of_sale.group_pos_user" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('pos_reservation_layaway.group_pos_reservation_user'))]"/>
        </record>
        <record id="point_of_sale.group_pos_manager" model="res.groups">
            <field name="implied_ids" eval="[(4, ref('pos_reservation_layaway.group_pos_reservation_manager'))]"/>
        </record>
    </data>
</odoo>
