<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_consume_credit_wizard" model="ir.ui.view">
        <field name="name">consume.credit.wizard.form</field>
        <field name="model">pos.reservation.consume.credit.wizard</field>
        <field name="arch" type="xml">
            <form string="Consumir saldo a favor">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="amount"/>
                        <field name="journal_id"/>
                    </group>
                    <footer>
                        <button string="Aplicar" type="object" name="action_consume" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_consume_credit_wizard" model="ir.actions.act_window">
        <field name="name">Consumir saldo a favor</field>
        <field name="res_model">pos.reservation.consume.credit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

